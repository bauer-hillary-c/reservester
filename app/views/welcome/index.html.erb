<div class="jumbotron center">
  <h1>Welcome to Reservester!</h1>
  <% if owner_signed_in? %>
    <div style="padding-top: 35px;">
      <p>
        <%= link_to "View Dashboard", owner_dashboard_path(owner_id: current_owner.id) %>
      </p>
    </div>
  <% elsif user_signed_in? %>
    <div style="padding-top: 35px;">
      <p>
        <%= link_to "View Reservations", user_dashboard_path(user_id: current_user.id) %>  
      </p>
    </div>
  <% else %>
    <p>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-large" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-large" %>
    </p>
  <% end %>

  <div style="padding-top: 30px;">
    <p>
      <%= link_to "View Restaurants", restaurants_path %>
    </p>
  </div>
</div>


