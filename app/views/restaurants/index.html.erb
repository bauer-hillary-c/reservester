<h1>All Restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone Number</th>
    <th>Food Type</th>
  </tr>

  <% @restaurants.each do |r| %>
    <tr>
      <td><%= r.name %></td>
      <td><%= r.address %></td>
      <td><%= r.phone_number %></td>
      <td><%= r.food_type %></td>
      <td><%= link_to 'View', restaurant_path(r.id) %></td>
      <td><%= link_to 'Edit', edit_restaurant_path(r.id) %></td>
      <td><%= image_tag r.photo.url(:thumb) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Create New Restaurant', new_restaurant_path %>
</p>
